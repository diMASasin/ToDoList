<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:MauiApp2="using:MauiApp2"
             x:Class="MauiApp2.MainPage"
             x:DataType="MauiApp2:MainViewModel">

    <ContentPage.BindingContext>
        <MauiApp2:MainViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">

            <HorizontalStackLayout
                HorizontalOptions="CenterAndExpand"
                Spacing="20">

                <Editor
                    AutoSize="TextChanges"
                    WidthRequest="250"
                    x:Name="EnterText"
                    Text="{Binding CurrentText}"/>

                <Button
                    Text="+"
                    CornerRadius="25"
                    FontSize="Title"
                    BackgroundColor="CornflowerBlue"
                    TextColor="White"
                    HeightRequest="40"
                    Command="{Binding AddItemCommand}"
                    CommandParameter="{Binding Source = {x:Reference EnterText}, Path=Text}"/>

            </HorizontalStackLayout>

            <ListView ItemsSource="{Binding TaskItems}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="MauiApp2:TaskItem">
                        <ViewCell>
                            <FlexLayout JustifyContent="Center" MaximumWidthRequest="750"  Margin="5">
                                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                                    <CheckBox x:Name="checkBox" VerticalOptions="Center"></CheckBox>

                                    <Editor VerticalTextAlignment = "Center" HorizontalOptions="StartAndExpand" AutoSize="TextChanges"
                                           Text="{Binding Text}" WidthRequest="500" IsReadOnly="True" Background="DodgerBlue">
                                        <Editor.Triggers>
                                            <DataTrigger 
                                                Binding = "{Binding Source = {x:Reference checkBox}, Path=IsChecked}"
                                                Value="true"
                                                TargetType="Editor">
                                                <Setter Property = "Background" Value="DarkSlateGray"/>
                                                <Setter Property = "TextColor" Value="Gray"/>
                                                <Setter Property = "FontAttributes" Value="Italic"/>
                                                <Setter Property = "IsReadOnly" Value="True"/>
                                            </DataTrigger>
                                            <DataTrigger 
                                                Binding = "{Binding IsEditingModeOn}"
                                                Value="true"
                                                TargetType="Editor">
                                                <Setter Property = "IsReadOnly" Value="False"/>
                                            </DataTrigger>
                                        </Editor.Triggers>
                                    </Editor>

                                    <Button
                                        Text="ред" CornerRadius="20" BackgroundColor="CornflowerBlue" x:Name="editButton"
                                        TextColor="White" Scale="0.9" HeightRequest="20"
                                        Command="{Binding EditItemCommand}"
                                        CommandParameter="{Binding}">
                                        <Button.Triggers>
                                            <DataTrigger
                                                Binding = "{Binding Source = {x:Reference checkBox}, Path=IsChecked}"
                                                Value="true"
                                                TargetType="Button">
                                                <Setter Property = "IsEnabled" Value="False"/>
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding = "{Binding Source = {x:Reference checkBox}, Path=IsChecked}"
                                                Value="false"
                                                TargetType="Button">
                                                <Setter Property = "IsEnabled" Value="True"/>
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding = "{Binding IsEditingModeOn}"
                                                Value="True"
                                                TargetType="Button">
                                                <Setter Property = "IsVisible" Value="False"/>
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>

                                    <Button
                                        Text="ОК"
                                        CornerRadius="25"
                                        BackgroundColor="CornflowerBlue"
                                        TextColor="White"
                                        HeightRequest="40"
                                        Command="{Binding ApplyItemCommand}"
                                        IsVisible="{Binding IsEditingModeOn}"/>

                                    <Button
                                        Text="X" CornerRadius="25" BackgroundColor="Red"
                                        TextColor="White" Scale="0.9" HeightRequest="20"
                                        Command="{Binding Source={RelativeSource FindAncestorBindingContext, 
                                                    AncestorType={x:Type MauiApp2:MainViewModel}}, Path=DeleteItemCommand}"
                                        CommandParameter="{Binding}"/>
                                </HorizontalStackLayout>
                            </FlexLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
